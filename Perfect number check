#include <stdio.h>

int main() {
    int a,b,c=0;
    printf("Enter number:  ");
    scanf("%d",&a);
    for(b=1;b<=a/2;b++){
        if(a%b==0){
         c+=b;
    } }
    printf("%d\n",c);
    if(a==c){
    printf("%d is a perfect number",a);
}
else{
    printf("%d is not a perfect number",a);
}
    return 0;
}
